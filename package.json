{
  "name": "splitsafex",
  "version": "1.0.0",
  "description": "AI-powered expense management platform for secure group expense tracking and settlement",
  "private": true,
  "workspaces": [
    "backend",
    "frontend",
    "middleware",
    "utils",
    "algorithms",
    "currency"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd frontend && npm run dev",
    "build": "npm run build:backend && npm run build:frontend",
    "build:backend": "cd backend && npm run build",
    "build:frontend": "cd frontend && npm run build",
    "start": "npm run start:backend",
    "start:backend": "cd backend && npm start",
    "start:frontend": "cd frontend && npm start",
    "test": "npm run test:unit && npm run test:integration",
    "test:unit": "jest tests/unit --config=tests/jest.config.js",
    "test:integration": "jest tests/integration --config=tests/jest.config.js --testTimeout=30000",
    "test:e2e": "jest tests/e2e --config=tests/jest.config.js --testTimeout=60000",
    "test:e2e:ai": "jest tests/e2e/ai --config=tests/jest.config.js --testTimeout=60000",
    "test:coverage": "jest --config=tests/jest.config.js --coverage",
    "test:watch": "jest --config=tests/jest.config.js --watch",
    "test:smoke": "jest tests/smoke --config=tests/jest.config.js",
    "test:performance": "jest tests/performance --config=tests/jest.config.js --testTimeout=120000",
    "test:compatibility": "jest tests/compatibility --config=tests/jest.config.js",
    "test:report": "jest --config=tests/jest.config.js --reporters=default --reporters=jest-html-reporters",
    "test:backend": "cd backend && npm test",
    "test:frontend": "cd frontend && npm test",
    "lint": "npm run lint:backend && npm run lint:frontend",
    "lint:backend": "cd backend && npm run lint",
    "lint:frontend": "cd frontend && npm run lint",
    "clean": "rm -rf node_modules backend/node_modules frontend/node_modules middleware/node_modules utils/node_modules algorithms/node_modules currency/node_modules",
    "reset": "npm run clean && npm install",
    "start:ai": "cd backend && npm run start:ai",
    "build:ai": "cd backend && npm run build:ai",
    "test:ai": "cd backend && npm run test:ai",
    "docker:build": "docker build -t splitsafex-ai ./backend/docker/",
    "docker:up": "docker-compose -f backend/docker/docker-compose.yml up -d",
    "docker:down": "docker-compose -f backend/docker/docker-compose.yml down",
    "docker:logs": "docker-compose -f backend/docker/docker-compose.yml logs -f",
    "docker:rebuild": "npm run docker:down && npm run docker:build && npm run docker:up",
    "ai:health": "curl -f http://localhost:5000/health || echo 'AI service not responding'",
    "ai:status": "cd backend && node -e \"console.log('Checking AI services...'); require('./ai/fraud-detection/serviceManager').checkHealth().catch(console.error)\"",
    "fraud:analyze": "cd backend && node scripts/analyze-fraud.js",
    "fraud:train": "cd backend && node scripts/train-model.js",
    "setup:ai": "cd backend && npm run setup:ai",
    "monitor:ai": "cd backend && npm run monitor:ai",
    "validate:ai": "npm run docker:build && npm run test:ai && npm run ai:health"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.3.1",
    "audit-ci": "^6.6.1",
    "better-npm-audit": "^3.7.3",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "jest-html-reporters": "^3.1.5",
    "lint-staged": "^15.2.0",
    "mongodb-memory-server": "^9.1.3",
    "nock": "^13.5.6",
    "prettier": "^3.1.1",
    "supertest": "^6.3.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,css,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "keywords": [
    "expense-management",
    "ai-powered",
    "group-expenses",
    "settlement",
    "fraud-detection",
    "multi-currency",
    "hackathon"
  ],
  "authors": [
    "Team Member 1 - Fraud Detection & Security",
    "Team Member 2 - Expense Management & Algorithms",
    "Team Member 3 - Settlement & Payment Integration",
    "Team Member 4 - UI/UX & Frontend Dashboard"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-team/splitsafex"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
