# Test Environment Configuration
NODE_ENV=test

# Database Configuration
MONGODB_URI=mongodb://127.0.0.1:27017/splitsafex_test
MONGODB_URI_TEST=mongodb://127.0.0.1:27017/splitsafex_test_memory
MONGODB_TEST_DB=splitsafex_test

# Redis Configuration
REDIS_URL=redis://localhost:6379/1

# JWT Configuration
JWT_SECRET=test-jwt-secret-with-sufficient-length-32-characters-minimum
JWT_EXPIRE=24h
JWT_REFRESH_SECRET=test-refresh-secret-with-sufficient-length-32-characters-minimum
JWT_REFRESH_EXPIRE=7d

# Session Configuration
SESSION_SECRET=test-session-secret-with-sufficient-length-32-characters-minimum

# AI Service Configuration
AI_SERVICE_URL=http://localhost:8000
AI_SERVICE_TIMEOUT=5000
AI_SERVICE_RETRY_ATTEMPTS=3
AI_SERVICE_RETRY_DELAY=1000

# API Configuration
PORT=3001
API_BASE_URL=http://localhost:3001
API_VERSION=v1

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_FAILED_REQUESTS=true

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:3001
CORS_CREDENTIALS=true

# File Upload Configuration
MAX_FILE_SIZE=5MB
UPLOAD_DIR=./tests/uploads
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf

# Currency Service Configuration
CURRENCY_API_KEY=test_currency_api_key
CURRENCY_API_URL=https://api.exchangerate-api.com/v4/latest
CURRENCY_CACHE_TTL=3600
CURRENCY_UPDATE_INTERVAL=3600000

# Email Configuration (Test)
EMAIL_SERVICE=test
EMAIL_HOST=smtp.ethereal.email
EMAIL_PORT=587
EMAIL_USER=test@ethereal.email
EMAIL_PASS=test_password
EMAIL_FROM=test@splitsafex.com
EMAIL_FROM_NAME=SplitSafeX Test

# Security Configuration
BCRYPT_ROUNDS=10
CSRF_SECRET=test_csrf_secret_key
ENCRYPTION_KEY=test_encryption_key_32_characters

# Logging Configuration
LOG_LEVEL=debug
LOG_FORMAT=combined
LOG_FILE=./tests/logs/test.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# Testing Configuration
TEST_TIMEOUT=30000
TEST_CONCURRENCY=1
JEST_TIMEOUT=30000
COVERAGE_THRESHOLD=80

# AI Model Configuration
FRAUD_MODEL_PATH=./tests/mocks/models/fraud_model.pkl
CATEGORIZATION_MODEL_PATH=./tests/mocks/models/categorization_model.pkl
MODEL_CACHE_DIR=./tests/cache/models
MODEL_UPDATE_INTERVAL=86400000

# Feature Flags (for testing different scenarios)
ENABLE_FRAUD_DETECTION=true
ENABLE_AI_CATEGORIZATION=true
ENABLE_PATTERN_ANALYSIS=true
ENABLE_EXPENSE_SUGGESTIONS=true
ENABLE_SETTLEMENT_OPTIMIZATION=true
ENABLE_MULTI_CURRENCY=true
ENABLE_GROUP_ANALYTICS=true
ENABLE_EXPORT_FEATURES=true
ENABLE_PAYMENT_REMINDERS=true
ENABLE_BUDGET_TRACKING=true

# Cache Configuration
CACHE_TTL=300
CACHE_MAX_SIZE=1000
CACHE_CHECK_PERIOD=60

# Webhook Configuration (for testing integrations)
WEBHOOK_SECRET=test_webhook_secret
WEBHOOK_TIMEOUT=5000
WEBHOOK_RETRY_ATTEMPTS=3

# Monitoring Configuration
METRICS_ENABLED=true
METRICS_PORT=9464
HEALTH_CHECK_INTERVAL=30000

# Development/Testing Specific
DEBUG=splitsafex:*
DISABLE_AUTH_IN_TESTS=false
MOCK_EXTERNAL_SERVICES=true
SEED_TEST_DATA=true
RESET_DB_BETWEEN_TESTS=true

# Performance Testing
LOAD_TEST_USERS=50
LOAD_TEST_DURATION=60
LOAD_TEST_RAMP_UP=10

# Integration Testing
INTEGRATION_TEST_DELAY=100
INTEGRATION_TEST_RETRIES=3
INTEGRATION_TEST_PARALLEL=false

# External Service URLs (Mocked in tests)
PAYMENT_SERVICE_URL=http://localhost:8001
NOTIFICATION_SERVICE_URL=http://localhost:8002
ANALYTICS_SERVICE_URL=http://localhost:8003

# Test Data Configuration
GENERATE_RANDOM_DATA=true
TEST_DATA_SIZE=small
TEST_USER_COUNT=10
TEST_GROUP_COUNT=5
TEST_EXPENSE_COUNT=20

# Cleanup Configuration
CLEANUP_TEST_FILES=true
CLEANUP_TEST_UPLOADS=true
CLEANUP_LOG_FILES=false
CLEANUP_CACHE_FILES=true

# Legacy configuration for compatibility
DB_URI=mongodb://localhost:27017/splitsafex_test
DB_NAME=splitsafex_test
TEST_CONFIG_VALUE=test-value
EMPTY_CONFIG=