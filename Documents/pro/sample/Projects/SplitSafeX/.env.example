# Environment Configuration Template for SafeSplitX
# Copy this file to .env and fill in your actual values

# ===== DATABASE CONFIGURATION =====
# MongoDB connection (if using MongoDB)
MONGODB_URI=mongodb://localhost:27017/splitsafex
MONGODB_TEST_URI=mongodb://localhost:27017/splitsafex_test

# PostgreSQL connection (if using PostgreSQL)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=splitsafex
POSTGRES_USER=your_username
POSTGRES_PASSWORD=your_password
POSTGRES_TEST_DB=splitsafex_test

# ===== APPLICATION CONFIGURATION =====
NODE_ENV=development
PORT=5000
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:5000

# ===== AUTHENTICATION & SECURITY =====
JWT_SECRET=your_very_secure_jwt_secret_key_here_minimum_32_characters
JWT_REFRESH_SECRET=your_very_secure_refresh_secret_key_here_minimum_32_characters
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d
BCRYPT_ROUNDS=12

# Session configuration
SESSION_SECRET=your_session_secret_key_here
COOKIE_SECRET=your_cookie_secret_key_here

# ===== EXTERNAL API KEYS =====
# Forex/Currency Exchange API
FOREX_API_KEY=your_forex_api_key_here
FOREX_API_URL=https://api.exchangerate-api.com/v4/latest

# Alternative currency APIs
FIXER_API_KEY=your_fixer_io_api_key_here
CURRENCYAPI_KEY=your_currencyapi_com_key_here

# Payment Gateway APIs
STRIPE_SECRET_KEY=your_stripe_secret_key_here
STRIPE_PUBLIC_KEY=your_stripe_publishable_key_here
PAYPAL_CLIENT_ID=your_paypal_client_id_here
PAYPAL_CLIENT_SECRET=your_paypal_client_secret_here

# Blockchain/Crypto APIs (if implementing crypto settlements)
BLOCKCHAIN_API_KEY=your_blockchain_api_key_here
ETHEREUM_RPC_URL=https://mainnet.infura.io/v3/your_infura_project_id

# ===== AI/ML SERVICES =====
# OpenAI API for fraud detection and expense categorization
OPENAI_API_KEY=your_openai_api_key_here

# Google Cloud ML API (alternative)
GOOGLE_CLOUD_API_KEY=your_google_cloud_api_key_here
GOOGLE_CLOUD_PROJECT_ID=your_project_id_here

# ===== EMAIL SERVICES =====
# SendGrid for email notifications
SENDGRID_API_KEY=your_sendgrid_api_key_here
FROM_EMAIL=noreply@splitsafex.com

# Alternative email services
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password_here

# ===== CLOUD STORAGE =====
# AWS S3 for file uploads (receipts, etc.)
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
AWS_REGION=us-east-1
AWS_S3_BUCKET=splitsafex-uploads

# Cloudinary for image processing
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# ===== MONITORING & LOGGING =====
# Application monitoring
SENTRY_DSN=your_sentry_dsn_here
LOG_LEVEL=info
LOG_DIR=./logs

# Analytics
GOOGLE_ANALYTICS_ID=your_ga_tracking_id_here

# ===== RATE LIMITING =====
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ===== CORS CONFIGURATION =====
CORS_ORIGINS=http://localhost:3000,https://your-production-domain.com

# ===== DEVELOPMENT/TESTING =====
# Test database settings
TEST_JWT_SECRET=test_jwt_secret_for_testing_only
ENABLE_SWAGGER=true
DEBUG_MODE=false

# ===== FEATURE FLAGS =====
ENABLE_FRAUD_DETECTION=true
ENABLE_MULTI_CURRENCY=true
ENABLE_CRYPTO_SETTLEMENTS=false
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_SMS_NOTIFICATIONS=false