{
  "name": "@splitsafex/middleware",
  "version": "1.0.0",
  "description": "Middleware layer for SafeSplitX providing clean integration points between frontend and backend",
  "private": true,
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "dev": "nodemon index.js",
    "build": "echo 'Middleware build complete'",
    "clean": "rm -rf node_modules coverage"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "joi": "^17.11.0",
    "jwt-decode": "^4.0.0",
    "dotenv": "^16.3.1",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "eslint": "^8.55.0",
    "nodemon": "^3.0.2",
    "@jest/globals": "^29.7.0",
    "axios-mock-adapter": "^1.22.0"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "**/*.js",
      "!node_modules/**",
      "!coverage/**",
      "!jest.config.js"
    ],
    "testMatch": [
      "**/__tests__/**/*.js",
      "**/*.test.js"
    ]
  },
  "keywords": [
    "middleware",
    "api",
    "authentication",
    "validation",
    "http-client",
    "splitsafex"
  ],
  "author": "SafeSplitX Team",
  "license": "MIT"
}