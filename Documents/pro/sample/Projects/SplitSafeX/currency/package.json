{
  "name": "@splitsafex/currency",
  "version": "1.0.0",
  "private": true,
  "description": "Multi-currency support and forex conversion utilities for SafeSplitX",
  "main": "index.js",
  "keywords": [
    "currency",
    "forex",
    "exchange-rates",
    "conversion",
    "splitsafex"
  ],
  "author": "SafeSplitX Team",
  "license": "UNLICENSED",
  "engines": {
    "node": ">=14.0.0"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "decimal.js": "^10.4.3",
    "dotenv": "^16.3.1",
    "joi": "^17.11.0",
    "moment": "^2.29.4",
    "node-cache": "^5.1.2",
    "redis": "^4.6.0"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "@types/jest": "^29.5.8",
    "eslint": "^8.54.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-n": "^16.3.1",
    "eslint-plugin-promise": "^6.1.1"
  },
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "dev": "node -r dotenv/config index.js",
    "health-check": "node -e \"require('./index.js').getHealthStatus().then(console.log)\"",
    "warm-cache": "node -e \"require('./index.js').warmCache().then(console.log)\"",
    "clear-cache": "node -e \"require('./index.js').clearCache().then(console.log)\"",
    "provider-stats": "node -e \"console.log(require('./index.js').getAllProviderStats())\"",
    "config-summary": "node -e \"console.log(require('./index.js').config.getConfigSummary())\"",
    "validate-config": "node -e \"console.log(require('./index.js').config.validateConfiguration())\""
  },
  "jest": {
    "testEnvironment": "node",
    "rootDir": "../",
    "collectCoverageFrom": [
      "currency/**/*.js",
      "!currency/node_modules/**",
      "!**/coverage/**",
      "!jest.config.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "testMatch": [
      "**/tests/__tests__/currency/**/*.test.js"
    ],
    "moduleNameMapping": {
      "^@splitsafex/currency/(.*)$": "<rootDir>/currency/$1"
    }
  },
  "eslintConfig": {
    "extends": [
      "standard"
    ],
    "env": {
      "node": true,
      "jest": true
    },
    "rules": {
      "no-console": "off",
      "no-unused-vars": [
        "error",
        {
          "argsIgnorePattern": "^_"
        }
      ]
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/splitsafex/splitsafex"
  },
  "bugs": {
    "url": "https://github.com/splitsafex/splitsafex/issues"
  },
  "homepage": "https://github.com/splitsafex/splitsafex#readme"
}